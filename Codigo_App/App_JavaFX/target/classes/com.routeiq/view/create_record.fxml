<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.routeiq.controllers.CreateRecordController"
            prefWidth="700" prefHeight="600"
            style="-fx-background-color: #fcd9b0;">
    <VBox alignment="CENTER" spacing="15" prefWidth="600" prefHeight="450" AnchorPane.topAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">

        <children>

            <!-- Logo superior-->
            <ImageView fitWidth="300" preserveRatio="true">
                <image>
                    <Image url="@/images/logo.png" />
                </image>
            </ImageView>

            <!-- Botón volver -->
            <Button layoutX="600" layoutY="20" text="←" onAction="#volver"
                    style="-fx-font-size: 18px; -fx-background-color: #f15a07; -fx-text-fill: white;" />

            <!-- Contenedor principal centrado -->
            <VBox alignment="TOP_CENTER" layoutX="50" layoutY="60" spacing="20" prefWidth="550">

                <Label text="Crear registro" style="-fx-font-weight: bold; -fx-font-size: 20px;" />

                <!-- Grid con los campos -->
                <GridPane hgap="15" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="50"/>
                        <ColumnConstraints percentWidth="50"/>
                    </columnConstraints>

                    <!-- Primera columna -->
                    <Label text="Carretera principal:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="carreteraPrincipalField" promptText="ejem: A-7, N-122, V-30..." GridPane.rowIndex="1" GridPane.columnIndex="0"/>

                    <Label text="Carretera destino:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="carreteraDestinoField" promptText="ejem: A-7, N-122..." GridPane.rowIndex="3" GridPane.columnIndex="0"/>

                    <Label text="Dirección:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="direccionCombo" GridPane.rowIndex="5" GridPane.columnIndex="0"/>

                    <!-- Segunda columna -->
                    <Label text="Tipo:" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    <ComboBox fx:id="tipoCombo" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Punto kilométrico (PK):" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    <TextField fx:id="pkField" promptText="ejem: 250,801" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Transporte:" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                    <TextField fx:id="transporteField" promptText="ejem: V150, SG170..." GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                    <Label text="Estudio:" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
                    <TextField fx:id="estudioField" promptText="ejem: 2508301" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

                    <Label text="Coordenadas:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                    <TextField fx:id="coordenadasField" promptText="ejem: 41°39'40.0&quot;N 4°44'26.9&quot;W" GridPane.rowIndex="7" GridPane.columnIndex="0"/>

                </GridPane>

                <!-- Botón centrado -->
                <HBox alignment="CENTER" spacing="10">
                    <Button text="Guardar registro" onAction="#guardarRegistro"
                            style="-fx-background-color: #f15a07; -fx-text-fill: white; -fx-background-radius: 30;"
                            prefWidth="180"/>
                </HBox>

            </VBox>
        </children>
    </VBox>
</AnchorPane>
